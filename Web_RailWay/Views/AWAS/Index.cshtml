@using Web_RailWay.App_LocalResources;
@using Web_RailWay.App_Code;

@{
    Layout = "~/Views/Shared/_RailWayUI.cshtml";
    ViewBag.Title = @RWResource.rw_railwayui_report_title;
    ViewBag.Home = @RWResource.rw_railwayui_report_home;
}

@section styles {
    @Styles.Render("~/jquery-ui/css")
    @Styles.Render("~/DataTables/css")
    <link rel="stylesheet" type="text/css" href="~/Content/RW/awas.css">
}

@section scripts {
    @Scripts.Render("~/bundles/Ajax")
    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/DataTables")
    <script src="~/Scripts/jquery.cookie.js" type="text/javascript"></script>
    <script src="~/Scripts/Shared/common.js" type="text/javascript"></script>
    <script src="~/Scripts/api_helpers/railway.js" type="text/javascript"></script>
    <script src="~/Scripts/api_helpers/railcars.js" type="text/javascript"></script>
    <script src="~/Scripts/RW/awas.js" type="text/javascript"></script>
}

<div id="container">
    <div id="header">
        <div class="title">@ViewBag.Title</div>
        <label class="title-label">@RWResource.rwui_title_select_station</label>
        <select id="stations-list" name="station"></select>
        <label class="title-label">@RWResource.rwui_title_number</label>
        <select id="stations-sise" name="side"></select>
        <label class="title-label">@RWResource.rwui_title_side</label>
    </div>
    <div id="list-group">
        <div id="group-list">
            <h3 id="group-list-ways">@RWResource.rwui_group_list_ways</h3>
            <div id="group-list-ways">
                <table class='display compact' id="table-list-ways" style="width:100%" cellpadding="0"></table>
            </div>
            <h3 id="group-list-wagonoverturns">@RWResource.rwui_group_list_wagonoverturns</h3>
            <div id="group-list-wagonoverturns">
                <table class='display compact' id="table-list-wagonoverturns" style="width:100%" cellpadding="0"></table>
            </div>
            <h3 id="group-list-shops">@RWResource.rwui_group_list_shops</h3>
            <div id="group-list-shops">
                <table class='display compact' id="table-list-shops" style="width:100%" cellpadding="0"></table>
            </div>
            <h3 id="group-list-arrival">@RWResource.rwui_group_list_arrival</h3>
            <div id="group-list-arrival">
                @*<table class='display compact' id="table-list-arrival" style="width:100%" cellpadding="0"></table>*@
            </div>
            <h3 id="group-list-arrivaluz">@RWResource.rwui_group_list_arrival_uz</h3>
            <div id="group-list-arrivaluz">
                @*<table class='display compact' id="table-list-arrival" style="width:100%" cellpadding="0"></table>*@
            </div>
            <h3 id="group-list-sent">@RWResource.rwui_group_list_sent</h3>
            <div id="group-list-sent">
                @*<table class='display compact' id="table-list-arrival" style="width:100%" cellpadding="0"></table>*@
            </div>
        </div>
    </div>
    <div id="detali-group">
        <table class='table-cars cell-border' id="table-list-cars" cellpadding="0"></table>
    </div>
    <div id="cls"></div>
</div>