                                controller = "Home",
                                action = "ChangeCulture",
                                lang = "ru"
                            }, new { @class = "ru-RU" == @GlobalResources.lang ? "select-lang" : "select-not-lang" })
                            @Html.RouteLink("EN", new
                            {
                                controller = "Home",
                                action = "ChangeCulture",
                                lang = "en"
                            }, new { @class = "en-US" == @GlobalResources.lang ? "select-lang" : "select-not-lang" })
