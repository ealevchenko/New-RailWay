                    <li>
                        <a class="page-scroll" href="#rep">@GlobalResources.Layout_rw_link_reports</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#doc">@GlobalResources.Layout_rw_link_instructions</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#admin">@GlobalResources.Layout_rw_link_admins</a>
                    </li>
                    <li>
                        <a class="page-scroll" href="#contact">@GlobalResources.Layout_rw_link_contacs</a>
