@using Web_RailWay.App_LocalResources;
@using Web_RailWay.App_Code;

@{
    Layout = "~/Views/Shared/_RailWay.cshtml";
    ViewBag.Title = @KISResource.kis_trnsfer_arrival_report_title;
    ViewBag.Home = @KISResource.kis_trnsfer_arrival_report_home;
}

@section Document {

}

@section Admin {
    @{ Html.RenderAction("LinkKISControl", "Home", new { area = "KIS" }); }
}

@section styles {
    <link rel="stylesheet" type="text/css" href="~/Content/reports.css">
    @Styles.Render("~/jquery-ui/css")
    @Styles.Render("~/DataTables/css")
    @Styles.Render("~/datetime/css")
    <link rel="stylesheet" type="text/css" href="~/Content/KIS/transfer.css">
}

@section scripts {
    @Scripts.Render("~/bundles/Ajax")
    @Scripts.Render("~/bundles/jquery-ui")
    @Scripts.Render("~/bundles/DataTables")
    @Scripts.Render("~/bundles/datetime")
    <script src="~/Scripts/jquery.cookie.js" type="text/javascript"></script>
    <script src="~/Scripts/Shared/common.js" type="text/javascript"></script>

    <script src="~/Scripts/Plugins/pl_common.js" type="text/javascript"></script>
    <script src="~/Scripts/Plugins/data_detali.js" type="text/javascript"></script>

    @*<script src="~/Scripts/api_helpers/metallurgtrans.js" type="text/javascript"></script>*@
    <script src="~/Scripts/api_helpers/railway.js" type="text/javascript"></script>
    <script src="~/Scripts/api_helpers/kist.js" type="text/javascript"></script>
    <script src="~/Scripts/api_helpers/kis.js" type="text/javascript"></script>
    <script src="~/Scripts/KIS/transfer_kis.js" type="text/javascript"></script>
    <script>
        $('header').addClass('img-header-kis');
    </script>
}

<div id="close-confirm" title="" style="display:none">
    <form id="form-close-confirm">
        <fieldset>
            <p><label id="close-comment-text"></label><Br>
                <textarea id="close-txt" name="comment" cols="60" rows="3"></textarea>
            </p>
            @*<input id="id-nodes" name="id-nodes" type="hidden" />
                <p>
                    <span class="ui-icon ui-icon-alert" style="float:left; margin:12px 12px 20px 0;"></span>
                    <label id="delete-confirm-text" name="delete-confirm-text"></label>
                </p>*@
            <!-- Allow form submission with keyboard without duplicating the dialog button -->
            <input type="submit" tabindex="-1" style="position:absolute; top:-1000px">
        </fieldset>
    </form>
</div>

<div id="report" class="report-wide">
    <div id="header">
        <div class="title">@ViewBag.Title</div>
        <div id="select-rangedatetime">
            <label id="label-select-date-range" class="title-label"></label>
            <span id="select-range">
                <input id="date-start" name="date_start" type="datetime" size="20">
                <label id="label-to" class="title-label"></label>
                <input id="date-stop" name="date_stop" type="datetime" size="20">
            </span>
        </div>
        <a href='@Url.Action("Desktop", "Transfer", new { area = "KIS" })' class="btn btn-link">Перенос для Desktop</a>
        @*<button class="ui-button ui-widget ui-corner-all" id="to-excel"> </button>*@
    </div>
    <div id="report-detali">
        <div id="tabs-report-transfer">
            <ul>
                <li><a href="#tabs-transfer-arrival" id="link-tabs-transfer-arrival"></a></li>
                <li><a href="#tabs-transfer-sending" id="link-tabs-transfer-sending"></a></li>
                <li><a href="#tabs-transfer-input" id="link-tabs-transfer-input"></a></li>
                <li><a href="#tabs-transfer-output" id="link-tabs-transfer-output"></a></li>
            </ul>
            <div id="tabs-transfer-arrival">
                <table class='compact table-hover' id="table-transfer-arrival" style="width:100%" cellpadding="0"></table>
            </div>
            <div id="tabs-transfer-sending">
                <table class='compact table-bordered' id="table-transfer-sending" style="width:100%" cellpadding="0"></table>
            </div>
            <div id="tabs-transfer-input">
                <table class='display compact' id="table-transfer-input" style="width:100%" cellpadding="0"></table>
            </div>
            <div id="tabs-transfer-output">
                <table class='display compact' id="table-transfer-output" style="width:100%" cellpadding="0"></table>
            </div>
        </div>

    </div>
    <div id="cls"></div>
</div>
