                        <th id="nature"></th>
                        <td><select id="confirm-nature" class="ui-widget-content ui-corner-all"></select></td>
                    </tr>*@
                <tr>
                    <th id="num"></th>
                    <td colspan="2"><textarea id="confirm-num" class="confirm-input ui-widget-content ui-corner-all"></textarea></td>
                </tr>
                <tr>
                    <th id="cause-type-cause"></th>
                    <td><select id="confirm-cause" class="ui-widget-content ui-corner-all"></select></td>
                    <td><select id="confirm-type-cause" class="ui-widget-content ui-corner-all"></select></td>
                </tr>
                @*<tr>
                        <th id="type-cause"></th>
                        <td><select id="confirm-type-cause" class="ui-widget-content ui-corner-all"></select></td>
                    </tr>*@
                <tr>
                    <th id="subdivision"></th>
                    <td colspan="2"><select id="confirm-subdivision" class="ui-widget-content ui-corner-all"></select></td>
