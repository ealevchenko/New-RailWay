                    <th id="driver"></th>
                    <td colspan="2"> <input id="confirm-drivers" type="text" class="confirm-input ui-widget-content ui-corner-all" /></td>
                </tr>
                <tr>
                    <th id="helper"></th>
                    <td colspan="2"><input id="confirm-helper" type="text" class="confirm-input ui-widget-content ui-corner-all" /></td>
                </tr>
                <tr>
                    <th id="measures"></th>
                    <td colspan="2"><textarea id="confirm-measures" class="confirm-input ui-widget-content ui-corner-all"></textarea></td>
                </tr>
                <tr>
                    <th id="note"></th>
