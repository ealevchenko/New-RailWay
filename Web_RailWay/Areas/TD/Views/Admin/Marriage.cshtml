                <tr>
                    <th id="akt"></th>
                    <td colspan="2"><input id="confirm-akt" type="text" class="confirm-input ui-widget-content ui-corner-all" /></td>
                </tr>
                <tr>
                    <th id="locomotive-series"></th>
                    <td colspan="2"><textarea id="confirm-locomotive-series" class="confirm-input ui-widget-content ui-corner-all"></textarea></td>
                </tr>
