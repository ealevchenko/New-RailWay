@using Web_RailWay.App_LocalResources;
@{
    Layout = "~/Views/Shared/_RailWay.cshtml"; 
    ViewBag.Title = @MTResource.index_report_arrival_title;
    ViewBag.Home = @MTResource.index_report_arrival_title;
}
@section Document {

}

@section Admin {
    @{ Html.RenderAction("LinkAdmin", "Home", new { area = "" }); }
}

@section styles {

}

@section scripts {
    <script>
        $('header').addClass('img-header-mt');
    </script>
}

<div class="jumbotron">
    <h1>@ViewBag.Title</h1>
    <p class="lead">@MTResource.index_report_arrival_desc</p>
</div>

<div class="content">
    <ul class="ca-menu">
        <li>
            <a href="#">
                <span class="ca-icon">K</span>
                <div class="ca-content">
                    <h2 class="ca-main">@MTResource.index_report_arrival_cargo_title</h2>
                    <h3 class="ca-sub">@MTResource.index_report_arrival_cargo_desc</h3>
                </div>
            </a>
        </li>
        <li>
            <a href='@Url.Action("Sostav", "Arrival", new { area = "MT" })'>
                <span class="ca-icon">I</span>
                <div class="ca-content">
                    <h2 class="ca-main">@MTResource.index_report_arrival_sostav_title</h2>
                    <h3 class="ca-sub">@MTResource.index_report_arrival_sostav_desc</h3>
                </div>
            </a>
        </li>
        <li>
            <a href='@Url.Action("Cars", "Arrival", new { area = "MT" })'>
                <span class="ca-icon">H</span>
                <div class="ca-content">
                    <h2 class="ca-main">@MTResource.index_report_arrival_cars_title</h2>
                    <h3 class="ca-sub">@MTResource.index_report_arrival_cars_desc</h3>
                </div>
            </a>
        </li>
    </ul>
</div>


