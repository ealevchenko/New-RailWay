@using Web_RailWay.App_LocalResources;

@model int?
@if (Model != null)
{
    using (Html.BeginForm("CloseArrivalCrs", "Arrival", new { area = "MT" }))
    {
        string buton_txt = (@Model != 0 ? @GlobalResources.button_title_close : @GlobalResources.button_title_close_all);
        <input name="id_sostav" id="id_sostav" type="hidden" value='@ViewBag.id_sostav'>
        <input name="id_car" id="id_car" type="hidden" value='@Model'>

        @*@Html.Hidden("id_sostav", (int)@ViewBag.id_sostav);
        @Html.Hidden("id_car", Model)*@
        <input type="submit" value='@buton_txt' />
    }
}
